<Window x:Class="PL.Orders.OrderTrack"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Orders"
        mc:Ignorable="d"
        
        Title="OrderTrack" Height="450" Width="800">
    <Grid>
        <Label Content="Enter Order Id:" HorizontalAlignment="Left" Margin="177,154,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBoxId"  HorizontalAlignment="Left" Margin="320,167,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" PreviewKeyDown="TextBox_PreviewKeyDown"/>
        <Button x:Name="Checking" Content="Check" HorizontalAlignment="Left" Margin="541,185,0,0" VerticalAlignment="Top" Click="Check_Click"/>

    </Grid>
</Window>
