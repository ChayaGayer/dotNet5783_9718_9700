<Window x:Class="PL.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="login" Height="400" Width="450" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="129,75,0,0" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top" Height="49" Width="231" FontSize="40" FontWeight="Bold" />
        <TextBox HorizontalAlignment="Left" Margin="79,181,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="250" RenderTransformOrigin="0.5,0.5" Height="36" FontSize="26" BorderBrush="BurlyWood" Foreground="DarkGray" TextAlignment="Center">

            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.408"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <PasswordBox HorizontalAlignment="Left" Margin="87,245,0,0" VerticalAlignment="Top" Width="251" Height="35"/>

    </Grid>
</Window>
